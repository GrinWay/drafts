<div
	{{ attributes }}
>
	<input
		type="text"
		data-model="input"
		data-loading="addClass(opacity-50)"
	>
	
	<div class="form-check">
		<input
			type="checkbox"
			data-model="isCool"
			class="form-check-input"
		>
	</div>
	
	<div class="">
		<button
			type="button"
			class="btn btn-ghost"
			{{ live_action('emptyLiveAction') }}
		>
			{{- 'emptyLiveAction (child)' -}}
		</button>
	</div>
	
	{{ component('live-textarea', {
		name: 'someForm[childPoly]',
		dataModel: 'input:value',
	}) }}
	
	{{ isCool ? 'true' : 'false' }}
</div>