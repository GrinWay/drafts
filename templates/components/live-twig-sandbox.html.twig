	<div class="">
		<button
			data-loading="addAttribute(disabled)"
			class="btn btn-sm btn-success"
			
			data-action="live#$render"
		>
			live#$render (Make an AJAX to render this twig component and update this HTML)
		</button>
	</div>
	
	<div class="">
		<button
			data-loading="addAttribute(disabled)"
			class="btn btn-sm btn-primary"
			
			{{ live_action('reset', {
				input: 'default',
			}, {
			
			}) }}
		>
			reset action
		</button>
	</div>
	
	<input type="file" name="one_file">
	<button class="btn btn-danger"
		{{ live_action('submitFiles', {}, {
			files: '',
		}) }}
	>
		Send a file
	</button>
	
	<div
		class="p-1 rounded text-bg-dark my-1"
	>
		<div>
			image id: {{- image.id|default('null') -}}
		</div>
		{{ form_start(form, { attr: {
			'data-action': 'live#action',
			'data-live-action-param': 'submitImage',
			novalidate: '',
		} }) }}
			{{ form_widget(form.filepath) }}
			{% for index, keyFrame in form.keyFrames %}
				{{ form_widget(keyFrame) }}
				{{ form_widget(keyFrame.vars.button_delete) }}
			{% endfor %}
			<div>
				{{ form_widget(form.keyFrames.vars.button_add) }}
			</div>
			{{ form_rest(form) }}
			<button class="btn btn-sm btn-success">
				–û—Ç–ø—Ä–∞–≤–∏—Ç—å —Ñ–æ—Ä–º—É
			</button>
		{{ form_end(form, { render_rest: false }) }}
	</div>
	
	<input type="checkbox"
		data-model="parentIsCool"
	>
	
	{{ component('listener-live-twig-sandbox', {
		'data-model': 'input:input parentIsCool:isCool',
	}) }}
	
	<button
		class="btn btn-large btn-danger"
		{{ live_action('emptyLiveAction') }}
		data-live-input-param="NEW INPUT"
	>
		Dispatch event
	</button>
	
