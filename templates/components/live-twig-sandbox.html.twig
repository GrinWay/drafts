<div {{ attributes }}>
	{#
	#}
	
	{% set input_data_loading = "data-loading='addClass(opacity-50) addAttribute(readonly)'" %}
	
	<div class="item">
		<div class="badge">
			<div
				class="badge text-bg-success"
				data-loading="model(input)|hide"
			>üëç</div>
			<div
				class="badge text-bg-warning"
				data-loading="model(input)|show"
			>...</div>
		</div>
		<input
			{{ input_data_loading|raw }}
			type="text"

			data-model="norender|input"
		>
		<div class="badge text-bg-dark">
			{{- input -}}
		</div>
	</div>
	
	<div class="item">
		<label>
			list
			<select
				class="form-control"
				multiple
				data-model="list"
			>
				<option
					value="my1"
				>
					MY_1
				</option>
				
				<option
					value="my2"
				>
					MY_2
				</option>
				
				<option
					value="my3"
				>
					MY_3
				</option>
				
				<option
					value="my4"
				>
					MY_4
				</option>
				
				<option
					value="my5"
				>
					MY_5
				</option>
			</select>
		</label>
	</div>
	
	<div class="item">
		<label>
			userDto.firstName
			<input
				{{ input_data_loading|raw }}
				type="text"

				data-model="userDto.firstName"
			>
			<div class="badge text-bg-dark">
				{{- userDto.firstName|default('null') -}}
			</div>
			userDto.lastName (without (de)hidration)
			<input
				{{ input_data_loading|raw }}
				type="text"

				data-model="userDto.lastName"
			>
			<div class="badge text-bg-dark">
				{{- userDto.lastName|default('null') -}}
			</div>
		</label>
	</div>
	
	<button
		class="btn btn-large btn-danger"
		data-model="input"
		data-value="BUTTON WAS CLICKED"
		data-action="live#update"
		data-loading="addAttribute(disabled)"
	>
		live#update (data-model="input")
	</button>
	
