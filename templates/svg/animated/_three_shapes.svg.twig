<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="-2500 -2500 21000 21000"
	width="160px"
	height="160px"
>
	{###> SHAPE ###}
	<path
		d="{{- svg_d_triangle -}}"
		id="svg-three-shapes"
		
		transform-origin="center" {# for rotating #}
		fill="{{- color_1 -}}"
		stroke="transparent"
		stroke-width="5rem"
		stroke-miterlimit="22.9256"
	/>
	{###< SHAPE ###}

	{###> ANIMATE ROTATION ###}
	<animate
		id="animate_svg_three_shapes_shape"

		xlink:href="#svg-three-shapes"
		attributeName="d"
		dur="{{- svg_three_shapes_dur -}}"
		
		values="
			{{- svg_d_triangle -}};
			{{- svg_d_rect -}};
			{{- svg_d_triangle -}};
			{{- svg_d_circle -}};
			{{- svg_d_rect -}};
			{{- svg_d_triangle -}};
		"
		keySplines="{{- svg_three_shapes_key_splines -}}"
		keyTimes="{{- svg_three_shapes_key_times -}}"
		calcMode="spline"
		repeatCount="indefinite"
		fill="freeze"
		additive="replace"
		begin="click"
	/>
	{###< ANIMATE ROTATION ###}

	{###> ANIMATE COLORS ###}
	<animate
		id="animate_svg_three_shapes_color"
		
		xlink:href="#svg-three-shapes"
		attributeName="fill"
		dur="{{- svg_three_shapes_dur -}}"
		
		values="
			{{- color_1 -}};
			{{- color_3 -}};
			{{- color_2 -}};
			{{- color_1 -}};
			{{- color_2 -}};
			{{- color_1 -}};
		"
		keySplines="{{- svg_three_shapes_key_splines -}}"
		keyTimes="{{- svg_three_shapes_key_times -}}"
		calcMode="spline"
		repeatCount="indefinite"
		fill="freeze"
		additive="replace"
		end="0s"
	/>
	{###< ANIMATE COLORS ###}

	{###> ANIMATE TRANSFORM ###}
	<animateTransform
		id="animate_three_shapes_rotate"
		
		xlink:href="#svg-three-shapes"
		attributeName="transform"
		type="rotate"
		dur="{{- svg_three_shapes_dur -}}"
		
		
		
		values="
			0 -2500 -2500;
			360 -2500 -2500;
		"
		repeatCount="indefinite"
		end="0s"
	/>
	{###< ANIMATE TRANSFORM ###}
</svg>