{% extends 'base.html.twig' %}

{% block title %}Foundry index{% endblock %}

{% block body %}
    <h1>Foundry index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for foundry in foundries %}
            <tr>
                <td>{{ foundry.id }}</td>
                <td>{{ foundry.title }}</td>
                <td>{{ foundry.description }}</td>
                <td>
                    <a href="{{ path('app_foundry_show', {'id': foundry.id}) }}">show</a>
                    <a href="{{ path('app_foundry_edit', {'id': foundry.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_foundry_new') }}">Create new</a>
{% endblock %}
