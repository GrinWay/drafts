{% block create %}

    <turbo-stream action="append" target="machines">
        <template>
			{% include 'machine/_machine.html.twig' with { machine: entity } %}
        </template>
    </turbo-stream>
	
{% endblock %}

{% block update %}

    <turbo-stream action="replace" target="machine_{{ id }}">
        <template>
            {% include 'machine/_machine.html.twig' with { machine: entity } %}
        </template>
    </turbo-stream>
	
    <turbo-stream action="update" target="show_machine_{{ id }}">
        <template>
            {% include 'machine/_show_machine.html.twig' with { machine: entity } %}
        </template>
    </turbo-stream>

{% endblock %}

{% block remove %}

    <turbo-stream action="remove" target="machine_{{ id }}"></turbo-stream>

{% endblock %}
