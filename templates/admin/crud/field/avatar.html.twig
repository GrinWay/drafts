{% set public_avatar_prefix = field.customOptions.get('public_avatar_prefix')|default(null) %}
{% set filename = field.formattedValue|default('default.png') %}
{% set height = field.customOptions.get('height')|default('40px') %}

{% if public_avatar_prefix %}
	{% set src = asset(public_avatar_prefix~'/'~filename) %}	
{% else %}
	{% set src = field.formattedValue %}
{% endif %}

<img class="image-avatar" height="{{ height }}" width="{{ height }}" src="{{- src -}}">